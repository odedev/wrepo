root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js, ts}]
indent_size = 2

[*.{css, scss, html}]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml, yaml, toml}]
indent_size = 2
